{
  "name": "juhradial-mx-kwin",
  "version": "0.1.0",
  "description": "KWin overlay script for JuhRadial MX radial menu",
  "main": "contents/code/main.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:ts": "tsc",
    "copy-assets": "echo 'Assets already in contents/'",
    "watch": "tsc --watch",
    "clean": "rm -rf dist/",
    "install-script": "kpackagetool6 -t KWin/Script -i . || kpackagetool6 -t KWin/Script -u .",
    "remove-script": "kpackagetool6 -t KWin/Script -r juhradial-mx"
  },
  "author": "Julian Hermstad",
  "license": "GPL-3.0",
  "devDependencies": {
    "typescript": "^5.3.0",
    "@opekope2/kwin-script-types": "^0.1.0"
  },
  "files": [
    "contents/",
    "metadata.json"
  ]
}
